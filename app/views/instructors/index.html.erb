

<p id="notice"><%= notice %></p>

<h1>Instructors</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Age</th>
      <th>Teaching:</th>
      <th>Salary</th>
      <th>Highest education</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructors.each do |instructor| %>
      <tr>
        <td><%= instructor.first_name %></td>
        <td><%= instructor.last_name %></td>
        <td><%= instructor.age %></td>
        <td>
        <%instructor.cohorts.each do |cohort|%>
          <a href="/cohorts/<%=cohort.id%>"><%=cohort.name%></a>,
        <%end%>
        </td>
        
        <td><%=number_to_currency(instructor.salary, precision: 0)%> </td>
        <td><%= instructor.highest_education %></td>
        <td><%= link_to 'Show', instructor %></td>
        <td><%= link_to 'Edit', edit_instructor_path(instructor) %></td>
        <td><%= link_to 'Destroy', instructor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Instructor', new_instructor_path %>
<%= link_to 'Instructor', instructors_path %>
<%= link_to 'Enrollments', enrollments_path %>
<%= link_to 'Cohorts', cohorts_path %>
<%= link_to 'Courses', courses_path %>
<%= link_to 'Students', students_path %>

<a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/users/sign_out">Log Out</a>
