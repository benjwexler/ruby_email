                                <td class="cohortName"><a href="/cohorts/<%=cohort.cohort_id%>"><%=Cohort.find(cohort.cohort_id).name%></a></td>
                                <td class="cohortName"><a href="/instructors/<%=Instructor.find(Cohort.find(cohort.cohort_id).instructor_id).id%>"><%=Instructor.find(Cohort.find(cohort.cohort_id).instructor_id).full_name%></a></td> 
                                 
                                   
                                    
            
                                </tr>

                                <%end%>
                                
                                
                           
                              
            
                               
                            </tbody>
                        </table>
           
            </div>
