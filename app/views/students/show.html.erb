<div class="container" id="content">
<p id="notice"><%= notice %></p>
<div id="mainz" class="row newSomething ">
        <div class="col-sm-6 col-md-4 col-lg-4 showCard">
        
                <div class="card centerVert">
                        <div class="card-body">
                            
                          <h5 class="card-title">Name:</h5>
                          <p class="card-text">
                          <%= @student.full_name %>
                          </p>
                          <h5 class="card-title">Age:</h5>
                          <p class="card-text">
                          <%= @student.age(@student.birthday) %>
                          </p>
                          
                          <a href="/students/<%=@student.id%>/edit" class="btn btn-primary">Edit</a>
                          
                          <a href="#" class="btn btn-primary">Remove</a>
                          
                        </div>
                      </div>

        </div>

        <div class="col-sm-6 col-md-8 col-lg-6 showBorder2 ">
                <table id="example" class="table table-striped table-sm table-hover  table-bordered" style="border-collapse:collapse;">
                        <thead class="thead-dark">
                            <tr>
                                <th>Ben Wexler's Cohorts</th>

                                <th>Withdraw Student</th>
    
    
                            </tr>
                        </thead>
                        <tbody>
                        <%@student.enrollments.each do |cohort|%>
                          <tr>
                          <td>
                          <div id="enrollment-<%=cohort.id%>">
                          <a href="/cohorts/<%=cohort.cohort_id%>"><%=Cohort.find(cohort.cohort_id).name%></a>,
                      </td>
                      <td><a data-confirm="Are you sure?" data-remote="true" rel="nofollow" data-method="delete" href="/enrollments/<%=cohort.id%> ">Destroy</a></td>
                        </div>  
                        
                          <%end%>
                          </tr>
                        
                         
    
                        </tbody>
                        <tfoot class="thead-dark">
                            <tr>
                                
                                <th>Cohort</th>
                                
                               
                                <th>Delete</th>
                                
    
                            </tr>
                        </tfoot>
                    </table>

                    

        </div>

        

   
    
    
</div>
<%if @values.length >0 %>

<h1>New Enrollment</h1>




<%= render 'new_enrollment', enrollment: @enrollment %>
<%else %>
<h1>Student is registered in all available cohorts</h1>
<%end %>

</div>


