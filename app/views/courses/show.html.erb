<div class="container" id="content">
<div id="mainz" class="row newSomething">
<p id="notice"><%= notice %></p>
        <div class="col-sm-6 col-md-4 col-lg-4">
                <div class="card">
                        <div class="card-body">
                            
                          <h5 class="card-title">Course Name:</h5>
                          <p class="card-text"><%= @course.name %></p>
                          <h5 class="card-title">Class Hours:</h5>
                          <p class="card-text"><%= @course.class_hours %></p>
                          <a href="#" class="btn btn-primary">Edit</a>
                          <a href="#" class="btn btn-primary">Remove</a>
                          
                        </div>
                      </div>

        </div>

        <div class="col-sm-6 col-md-8 col-lg-6 showBorder ">
                <table id="example" class="table table-striped table-sm table-hover  table-bordered" style="border-collapse:collapse;">
                        <thead class="thead-dark">
                            <tr>
                            
                                <th>All <%= @course.name %> Cohorts</th>
    
                                
                                <th>Remove Cohort</th>
    
    
                            </tr>
                        </thead>
                        <tbody>

                        <%@course.cohorts.each do |cohort|%>
                          <tr>
                          <td>
                          <a href="/cohorts/<%=cohort.id%>"><%=cohort.start_date.strftime("%B, %d, %Y")%></a>
                      </td>
                          <td><a data-confirm="Are you sure?" data-remote="true" rel="nofollow" data-method="delete" href="/cohorts/<%=cohort.id%> ">
                         
                          <i class="fas fa-trash fa-stroopwafel fa-2x"></i>
                      
                          </a></td>
                          </div>  
                          <br>
                      </tr>
                        <%end%>
                           
